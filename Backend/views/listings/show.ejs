<% layout("/layouts/boilerplate") %>
<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <!-- Listing Card -->
        <div class="card shadow-lg mb-5">
          <img src="<%= listing.image?.url || 'https://images.unsplash.com/photo-1603477849227-705c424d1d80?q=80&w=1074&auto=format&fit=crop' %>" 
               class="card-img-top show-img" 
               style="height: 400px; object-fit: cover;" 
               alt="listing_image">
          
          <div class="card-body">
            <h3 class="card-title mb-3"><%= listing.title %></h3>
            
            <div class="d-flex justify-content-between align-items-center mb-3">
              <span class="badge bg-primary fs-6"><%= listing.location %>, <%= listing.country %></span>
              <h4 class="text-success">â‚¹<%= listing.price %></h4>
            </div>
            
            <p class="card-text lead"><%= listing.description %></p>
            
            <!-- Owner Actions -->
            <% if (currUser && currUser._id.toString() === listing.owner.toString()) { %>
              <div class="d-flex gap-2 mt-4">
                <a href="/Listings/<%= listing._id %>/edit" class="btn btn-warning">
                  <i class="bi bi-pencil-square"></i> Edit
                </a>
                <form method="POST" action="/Listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                  <button class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                </form>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Review Section -->
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-light">
            <h4 class="mb-0">Leave a Review</h4>
          </div>
          <div class="card-body">
            <form action="/Listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
              <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <div class="d-flex align-items-center">
                  <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]" required>
                  <span class="ms-3 fs-5 text-warning" id="ratingValue">3</span>
                </div>
              </div>
              <div class="mb-3">
                <label for="comment" class="form-label">Your Review</label>
                <textarea class="form-control" name="review[comment]" id="comment" rows="3" required 
                          placeholder="Share your experience..."></textarea>
                <div class="invalid-feedback">
                  Please share your thoughts about this listing.
                </div>
              </div>
              <button class="btn btn-primary">
                <i class="bi bi-send"></i> Submit Review
              </button>
            </form>
          </div>
        </div>

        <!-- Reviews List -->
        <div class="card shadow-sm">
          <div class="card-header bg-light">
            <h4 class="mb-0">Customer Reviews</h4>
          </div>
          <div class="card-body">
            <% if (listing.reviews.length > 0) { %>
              <div class="row row-cols-1 row-cols-md-2 g-4">
                <% for (let review of listing.reviews) { %>
                  <div class="col">
                    <div class="card h-100">
                      <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                          <h5 class="card-title">Anonymous User</h5>
                          <div class="text-warning">
                            <% for (let i = 0; i < review.rating; i++) { %>
                              <i class="bi bi-star-fill"></i>
                            <% } %>
                            <% for (let i = review.rating; i < 5; i++) { %>
                              <i class="bi bi-star"></i>
                            <% } %>
                          </div>
                        </div>
                        <p class="card-text"><%= review.comment %></p>
                        <small class="text-muted">Posted on <%= review.createdAt.toLocaleDateString() %></small>
                      </div>
                      <% if (currUser && currUser._id.toString() === listing.owner.toString()) { %>
                        <div class="card-footer bg-transparent">
                          <form action="/Listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-outline-danger">
                              <i class="bi bi-trash"></i> Delete
                            </button>
                          </form>
                        </div>
                      <% } %>
                    </div>
                  </div>
                <% } %>
              </div>
            <% } else { %>
              <div class="text-center py-4">
                <i class="bi bi-chat-square-text fs-1 text-muted"></i>
                <p class="mt-2 text-muted">No reviews yet. Be the first to review!</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Rating value display script -->
  <script>
    const ratingInput = document.getElementById('rating');
    const ratingValue = document.getElementById('ratingValue');
    
    ratingInput.addEventListener('input', () => {
      ratingValue.textContent = ratingInput.value;
    });
  </script>
</body>